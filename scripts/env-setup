#!/bin/bash


sudo apt-get update
if [ "$?" -ne "0" ]; then exit 1; fi
sudo apt-get install build-essential libssl-dev
if [ "$?" -ne "0" ]; then exit 1; fi


cd ~/Programs

git clone https://github.com/VectorCell/dotfiles.git
cd dotfiles
git pull
yes | ./install.sh
cd ..

git clone https://github.com/VectorCell/pubkeys.git
cd pubkeys
git pull
./add-keys.sh
cd ..

git clone https://github.com/VectorCell/tmux-configuration.git
cd tmux-configuration
git pull
yes | ./install.sh
cd ..

git clone https://github.com/VectorCell/sublime-config.git
cd sublime-config
git pull
./install.sh
cd ..

git clone https://github.com/VectorCell/output-sparse.git
cd output-sparse
git pull
make
make install
cd ..

git clone https://github.com/VectorCell/music-control.git
cd music-control
git pull
./install.sh
cd ..

git clone https://github.com/VectorCell/openssl-encrypt.git
cd openssl-encrypt
git pull
./install.sh
cd ..

git clone https://github.com/VectorCell/sumpass.git
cd sumpass
git pull
make
make install
cd ..

git clone https://github.com/Cyan4973/xxHash.git
cd xxHash
git pull
make
cd ~/bin
ln -s ~/Programs/xxHash/xxhsum
cd ~/Programs

make-hosts --restore
make-hosts
echo "/etc/hosts:"
cat /etc/hosts

which output-sparse || echo "unable to find output-sparse"
which sp || echo "unable to find sp"
which aes-encrypt || echo "unable to find aes-encrypt"
which aes-decrypt || echo "unable to find aes-decrypt"
which sump || echo "unable to find sump"
which xxhsum || echo "unable to find xxhsum"
